<h1> Listing All articles</h1>
<%= link_to 'Create New Article', new_article_path %>
<table>
    <tr>
        <th> Title</th>
        <th> Description</th>
    </tr>
    <% @articles.each do |a| %>
        <tr>
            <td><%= a.title %></td>
            <td><%= a.description %></td>
            <td><%= link_to 'Edit', edit_article_path(a) %></td>
            <td><%=link_to 'Show', article_path(a) %></td>
            <td><%= link_to 'Delete' , article_path(a), method: :delete , data: {confirm: "Are you sure you want to delete the article"} %></td>
            
        </tr>
    
    <% end %>
    
</table></br>

<%= link_to 'Back to Home' , root_path %>