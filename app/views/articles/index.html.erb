<h1 align = "center"> Listing All articles</h1>

<div class  "col-xs-8 col-xs-offset-2">
    <%= link_to 'Create New Article', new_article_path, class: "btn btn-success" %>
</div>


<% @articles.each do |a| %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div class= "article-title">
                    <%=link_to a.title , article_path(a)%>
                </div>
                <div class="article-body">
                    <%= truncate(a.description, lenght: 100)%>
                </div>
                <div class= "article-actions">
                    <%= link_to 'Edit this article', edit_article_path(a) , class: "btn btn-xs btn-primary"%>
                    <%= link_to 'Delete This Article', article_path(a) , method: :delete , data: {confirm: "Are you sure you want to delete the article"}, class: "btn btn-xs btn-danger" %>
                </div>
            </div>
        </div>
    </div>
<% end %>

<div class  "col-xs-8 col-xs-offset-2">
    <%= link_to 'Back to Home' , root_path , class: "btn btn-primary" %>
</div>



